{
  "name": "omodsim Development (Linux)",
  // "image": "mcr.microsoft.com/devcontainers/universal:2",
  "build": {
      // Path is relative to the devcontainer.json file.
      "dockerfile": "Dockerfile"
  },
  "features": {
		"ghcr.io/devcontainers/features/desktop-lite:1": {}
  },
	"forwardPorts": [6080],
	"portsAttributes": {
		"6080": {
		"label": "desktop",
		"onAutoForward": "openBrowser"
		}
	},
	"containerEnv": {
	  "VNC_RESOLUTION": "1600x1024x16"
	},
	"postCreateCommand": "bash .devcontainer/generate-tasks.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-python.python"
      ]
    }
  }
}
